########################################
# Client-side (Vite exposes only VITE_* vars to browser)
########################################

# API base URL for frontend. Empty = same origin (/api)
VITE_API_BASE=

# Uploadcare public key (used in browser, safe to expose)
VITE_UPLOADCARE_PUBLIC_KEY=your-public-key

########################################
# Server-side (backend only, never exposed to browser)
########################################

# Gotenberg service base URL (required for PDF rendering)
GOTENBERG_URL=__REQUIRED__

# PDF rendering timeout in milliseconds (default 60000)
PDF_TIMEOUT_MS=60000

# Port for Express server (default 3000). Optional.
# PORT=3000

# Optional: override static dir containing index.html
# SERVE_DIR=client/dist

# Static upload directory (served at /uploads if present)
UPLOAD_DIR=server/src/uploads

# CORS origin for browser requests with cookies
CORS_ORIGIN=http://localhost:5173

# Admin notifications
ADMIN_EMAIL=__REQUIRED__

# SendGrid API key (required to send admin emails)
SENDGRID_API_KEY=__REQUIRED__

# Postgres
DATABASE_URL=postgres://user:pass@host:5432/db
DATABASE_SSL=true

# Sessions (used for JWT signing/verification)
SESSION_SECRET=change_me_long_random
# Cookie name for the session token
COOKIE_NAME=dr_session
