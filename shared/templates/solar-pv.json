{
  "id": "solar-pv-v1",
  "name": "Solar PV",
  "version": "1.0.5",
  "pages": [
    {
      "id": "cover",
      "name": "Cover",
      "kind": "cover",
      "blocks": [
        {
          "id": "title",
          "type": "text",
          "rect": { "x": 10, "y": 12, "w": 80, "h": 8 },
          "placeholder": "Solar PV Inspection"
        },
        {
          "id": "subtitle",
          "type": "text",
          "rect": { "x": 10, "y": 22, "w": 80, "h": 6 },
          "placeholder": "Project / Site name"
        },
        {
          "id": "logo",
          "type": "image",
          "rect": { "x": 35, "y": 35, "w": 30, "h": 20 },
          "label": "Company Logo",
          "help": "Place your company logo here",
          "url": "{{run.logo}}",
          "alt": "Company logo",
          "fit": "contain",
          "opacity": 100,
          "borderRadius": 0
        },
        {
          "id": "slogan",
          "type": "text",
          "rect": { "x": 20, "y": 58, "w": 60, "h": 5 },
          "placeholder": "Reliable aerial inspections"
        },
        {
          "id": "meta_left",
          "type": "text",
          "rect": { "x": 10, "y": 72, "w": 30, "h": 4 },
          "placeholder": "Prepared for: {{run.clientName}}"
        },
        {
          "id": "meta_center",
          "type": "text",
          "rect": { "x": 42, "y": 72, "w": 16, "h": 4 },
          "placeholder": "{{run.date}}"
        },
        {
          "id": "meta_right",
          "type": "text",
          "rect": { "x": 60, "y": 72, "w": 30, "h": 4 },
          "placeholder": "Prepared by: {{run.company}}"
        },
        {
          "id": "footer_left",
          "type": "text",
          "rect": { "x": 10, "y": 92, "w": 50, "h": 4 },
          "placeholder": "{{run.company|Company}} • Confidential"
        },
        {
          "id": "footer_right",
          "type": "text",
          "rect": { "x": 70, "y": 92, "w": 20, "h": 4 },
          "placeholder": "Page {{draft.page}}/{{draft.pages}}"
        }
      ]
    },
    {
      "id": "exec_summary",
      "name": "Executive Summary",
      "kind": "exec_summary",
      "blocks": [
        {
          "id": "summary_header",
          "type": "text",
          "rect": { "x": 10, "y": 8, "w": 80, "h": 6 },
          "placeholder": "Executive summary",
          "help": "Write a concise overview."
        },
        {
          "id": "summary_divider",
          "type": "divider",
          "rect": { "x": 10, "y": 15, "w": 80, "h": 1 }
        },
        {
          "id": "severity_overview",
          "type": "section",
          "rect": { "x": 10, "y": 18, "w": 80, "h": 28 },
          "label": "Severity Overview",
          "help": "Review overall severity distribution.",
          "options": {
            "kind": "severityOverview",
            "props": { "showIcons": true }
          }
        },
        {
          "id": "inspection_details",
          "type": "section",
          "rect": { "x": 10, "y": 48, "w": 80, "h": 30 },
          "label": "Inspection Details",
          "help": "Confirm drone, date, weather, and method.",
          "options": {
            "kind": "inspectionDetails",
            "props": { "cols": 2, "showIcons": true }
          }
        }
      ]
    },
    {
      "id": "findings",
      "name": "Findings",
      "kind": "issue_index",
      "blocks": [
        {
          "id": "findings_table",
          "type": "section",
          "rect": { "x": 8, "y": 10, "w": 84, "h": 70 },
          "label": "Findings Table",
          "help": "Populate or verify all anomalies.",
          "options": {
            "kind": "findingsTable",
            "props": { "pageSize": 10, "showSeverityIcons": true }
          }
        }
      ]
    },
    {
      "id": "media",
      "name": "Media Evidence",
      "kind": "media_appendix",
      "blocks": [
        {
          "id": "photo_strip",
          "type": "section",
          "rect": { "x": 8, "y": 10, "w": 84, "h": 30 },
          "label": "Photo Strip",
          "help": "Select key visual evidence photos.",
          "options": {
            "kind": "photoStrip",
            "props": { "count": 3 }
          }
        },
        {
          "id": "ortho_pair",
          "type": "section",
          "rect": { "x": 8, "y": 44, "w": 84, "h": 22 },
          "label": "Ortho Pair",
          "help": "Add overview and detail ortho imagery.",
          "options": {
            "kind": "orthoPair",
            "props": {
              "layout": "horizontal",
              "showNorth": true,
              "showScale": true
            }
          }
        },
        {
          "id": "thermal_anomalies",
          "type": "section",
          "rect": { "x": 8, "y": 68, "w": 84, "h": 24 },
          "label": "Thermal Anomalies",
          "help": "List thermal anomalies with ΔT.",
          "options": {
            "kind": "thermalAnomalies",
            "props": { "pageSize": 8, "showDelta": true, "unit": "°C" }
          }
        }
      ]
    }
  ]
}
