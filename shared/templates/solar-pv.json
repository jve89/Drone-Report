{
  "id": "solar-pv-v1",
  "name": "Solar PV",
  "version": "1.0.3",
  "pages": [
    {
      "id": "cover",
      "name": "Cover",
      "kind": "cover",
      "blocks": [
        { "id": "top_band", "type": "rect", "rect": { "x": 0, "y": 0, "w": 100, "h": 12 }, "label": "Top band" },
        { "id": "logo_box", "type": "rect", "rect": { "x": 82, "y": 2, "w": 14, "h": 8 }, "label": "Logo" },

        { "id": "title", "type": "text", "rect": { "x": 10, "y": 18, "w": 80, "h": 8 }, "placeholder": "Solar PV Inspection" },
        { "id": "subtitle", "type": "text", "rect": { "x": 10, "y": 26.5, "w": 60, "h": 5 }, "placeholder": "Project / Site name" },
        { "id": "divider_top", "type": "divider", "rect": { "x": 10, "y": 33, "w": 80, "h": 1 } },

        {
          "id": "site_properties",
          "type": "section",
          "rect": { "x": 10, "y": 36, "w": 80, "h": 30 },
          "label": "Site Properties",
          "help": "Fill in site details.",
          "options": { "kind": "siteProperties", "props": { "orientation": "", "inclinationDeg": 0 } }
        },

        { "id": "divider_bottom", "type": "divider", "rect": { "x": 10, "y": 68, "w": 80, "h": 1 } },

        { "id": "meta_left", "type": "text", "rect": { "x": 10, "y": 72, "w": 38, "h": 4 }, "placeholder": "Prepared for: {{run.clientName}}" },
        { "id": "meta_right", "type": "text", "rect": { "x": 52, "y": 72, "w": 38, "h": 4 }, "placeholder": "Prepared by: {{run.company}}" },

        { "id": "footer_divider", "type": "divider", "rect": { "x": 10, "y": 90, "w": 80, "h": 1 } },
        { "id": "footer_left", "type": "text", "rect": { "x": 10, "y": 92, "w": 40, "h": 4 }, "placeholder": "Company • Confidential" },
        { "id": "footer_right", "type": "text", "rect": { "x": 70, "y": 92, "w": 20, "h": 4 }, "placeholder": "Page {{draft.page}}/{{draft.pages}}" }
      ]
    },
    {
      "id": "exec_summary",
      "name": "Executive Summary",
      "kind": "exec_summary",
      "blocks": [
        { "id": "summary_header", "type": "text", "rect": { "x": 10, "y": 8, "w": 80, "h": 6 }, "placeholder": "Executive summary", "help": "Write a concise overview." },
        { "id": "summary_divider", "type": "divider", "rect": { "x": 10, "y": 15, "w": 80, "h": 1 } },
        {
          "id": "severity_overview",
          "type": "section",
          "rect": { "x": 10, "y": 18, "w": 80, "h": 28 },
          "label": "Severity Overview",
          "help": "Review overall severity distribution.",
          "options": { "kind": "severityOverview", "props": { "showIcons": true } }
        },
        {
          "id": "inspection_details",
          "type": "section",
          "rect": { "x": 10, "y": 48, "w": 80, "h": 30 },
          "label": "Inspection Details",
          "help": "Confirm drone, date, weather, and method.",
          "options": { "kind": "inspectionDetails", "props": { "cols": 2, "showIcons": true } }
        }
      ]
    },
    {
      "id": "findings",
      "name": "Findings",
      "kind": "issue_index",
      "blocks": [
        {
          "id": "findings_table",
          "type": "section",
          "rect": { "x": 8, "y": 10, "w": 84, "h": 70 },
          "label": "Findings Table",
          "help": "Populate or verify all anomalies.",
          "options": { "kind": "findingsTable", "props": { "pageSize": 10, "showSeverityIcons": true } }
        }
      ]
    },
    {
      "id": "media",
      "name": "Media Evidence",
      "kind": "media_appendix",
      "blocks": [
        {
          "id": "photo_strip",
          "type": "section",
          "rect": { "x": 8, "y": 10, "w": 84, "h": 30 },
          "label": "Photo Strip",
          "help": "Select key visual evidence photos.",
          "options": { "kind": "photoStrip", "props": { "count": 3 } }
        },
        {
          "id": "ortho_pair",
          "type": "section",
          "rect": { "x": 8, "y": 44, "w": 84, "h": 22 },
          "label": "Ortho Pair",
          "help": "Add overview and detail ortho imagery.",
          "options": { "kind": "orthoPair", "props": { "layout": "horizontal", "showNorth": true, "showScale": true } }
        },
        {
          "id": "thermal_anomalies",
          "type": "section",
          "rect": { "x": 8, "y": 68, "w": 84, "h": 24 },
          "label": "Thermal Anomalies",
          "help": "List thermal anomalies with ΔT.",
          "options": { "kind": "thermalAnomalies", "props": { "pageSize": 8, "showDelta": true, "unit": "°C" } }
        }
      ]
    }
  ]
}
